#!/bin/bash -e

# Become root
if [ $UID -ne 0 ]; then
	echo "-- Becoming root"
	exec sudo $0
fi

MACH=$(uname -m)
unset DPKG_FLAGS

BASE=$(readlink -f $(dirname $0)/..)

if [ "$MACH" = "x86_64" ]; then
	echo "-- Detected a 64-bit system"

	# Make dpkg install 32-bit PhysX packages on a 64-bit system
	DPKG_FLAGS=--force-architecture

	# 32-bit compatibility (simulator must build as 32-bit for PhysX)
	echo "-- Installing 32-bit compatibility libraries"
	apt-get install libc6-dev-i386 g++-multilib ia32-libs
fi

echo "-- Installing normal packages"
apt-get install build-essential qt4-dev-tools libboost-dev \
	libusb-dev libblas-dev liblapack-dev libgtkmm-2.4-dev protobuf-compiler libprotobuf-dev \
	libpcap-dev scons graphviz binutils-dev libqt4-opengl-dev python-pip python-dev \
	avr-libc libgmp3-dev libmpfr-dev libmpc-dev texinfo curl texinfo dfu-programmer avrdude \
	libreadline-dev libgtest0 libgtest-dev autoconf libtool autopoint flex bison openocd

echo "-- Removing excessively old packages: if this causes a problem, kill it here and fix it yourself"
apt-get remove python-git

echo "-- Installing python packages"
pip install GitPython

