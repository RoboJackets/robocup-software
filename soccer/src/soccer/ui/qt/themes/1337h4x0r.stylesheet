/*
    (background)
	COLOR_DARK     = black
	COLOR_MEDIUM   = #00FF00
    (borders)
	COLOR_MEDLIGHT = #00FF00
    (text)
	COLOR_LIGHT    = #00FF00
    (scroll bar and menu selection)
	COLOR_ACCENT   = #00FF00
*/

* {
	background: black;
	color: #00FF00;
}

QWidget:selected, QMenu::item:selected, QMenuBar::item:selected, QMenuBar::item:pressed, QTreeWidget::item:selected{
    color: black;
	background: #00FF00;
}

QAbstractScrollArea {
    selection-color: black;
    selection-background-color: #00FF00;
}

QListWidget::item {
    border: 1px solid #00FF00;
}

/* Don't change color of select QComboBoxes */
QComboBox:selected {
	background: none;
}

QCheckBox, QRadioButton {
	border: none;
}

QRadioButton::indicator, QCheckBox::indicator {
	width: 13px;
	height: 13px;
}

QStatusBar::item {
    border: none;
}

QScrollBar {
	border: 1px solid #00FF00;
	background: black;
}

QScrollBar:horizontal {
	height: 15px;
	margin: 0px 0px 0px 32px;
}

QScrollBar:vertical {
	width: 15px;
	margin: 32px 0px 0px 0px;
}

QScrollBar::handle {
	background: #00FF00;
	border: 1px solid #00FF00;
}

QScrollBar::handle:horizontal {
	border-width: 0px 1px 0px 1px;
}

QScrollBar::handle:vertical {
	border-width: 1px 0px 1px 0px;
}

QScrollBar::handle:horizontal {
	min-width: 20px;
}

QScrollBar::handle:vertical {
	min-height: 20px;
}

QScrollBar::add-line, QScrollBar::sub-line {
	background:#00FF00;
	border: 1px solid black;
	subcontrol-origin: margin;
}

QScrollBar::add-line {
	position: absolute;
}

QScrollBar::add-line:horizontal {
	width: 15px;
	subcontrol-position: left;
	left: 15px;
}

QScrollBar::add-line:vertical {
	height: 15px;
	subcontrol-position: top;
	top: 15px;
}

QScrollBar::sub-line:horizontal {
	width: 15px;
	subcontrol-position: top left;
}

QScrollBar::sub-line:vertical {
	height: 15px;
	subcontrol-position: top;
}

QScrollBar:left-arrow, QScrollBar::right-arrow, QScrollBar::up-arrow, QScrollBar::down-arrow {
	border: 1px solid black;
	width: 3px;
	height: 3px;
}

QScrollBar::add-page, QScrollBar::sub-page {
	background: none;
}

QLabel {
    /* TODO find a good color for background of qlabel */
	/* background: none; */
}

QAbstractButton:hover {
	background: #00FF00;
}

QAbstractButton:pressed {
	background: black;
}

QAbstractItemView {
	show-decoration-selected: 1;
	selection-background-color: #00FF00;
	selection-color: #00FF00;
	alternate-background-color: #00FF00;
}

QComboBox QAbstractItemView {
    border: 1px solid #00FF00;
}

/* color uneditable items differently */
QComboBox QAbstractItemView:!enabled, QComboBox:!enabled {
	background: #00FF00;
    color: black;
}

QHeaderView {

}

QHeaderView::section {
	background: black;
	padding: 4px;
}

QHeaderView::section:selected, QHeaderView::section::checked {
	background: #00FF00;
}

QTableView {
	gridline-color: black;
}

QTabBar::tab {
    border: 1px solid #00FF00;
    padding: 5;
}

QTabBar::tab:selected:left {
    color: black;
	background: #00FF00;

    border: 1px solid #00FF00;
    border-top-right-radius: 2px;
    border-bottom-right-radius: 2px;
}

QTabBar::tab:!selected:left {
    margin-right: 2px;
}

QTabBar::tab:!enabled:left {
	background: #00FF00;
    color: black;
    border-top-right-radius: 2px;
    border-bottom-right-radius: 2px;
    border: 1px solid #00FF00;
}


QAbstractSpinBox {
    padding-right: 15px;
}

QAbstractSpinBox::up-button, QAbstractSpinBox::down-button {
	border: 1px solid #00FF00;
	background: #00FF00;
	subcontrol-origin: border;
}

QAbstractSpinBox::up-arrow, QAbstractSpinBox::down-arrow {
	width: 3px;
	height: 3px;
	border: 1px solid #00FF00;
}

QSlider {
	border: none;
}

QSlider::handle {
	border: 1px solid #00FF00;
	background: #00FF00;
}

QSlider::add-page:vertical, QSlider::sub-page:horizontal {
	background: #00FF00;
}

QSlider::sub-page:vertical, QSlider::add-page:horizontal {
	background: #00FF00;
}

QProgressBar {
	text-align: center;
}

QProgressBar::chunk {
	width: 1px;
	background-color: #00FF00;
}

QMenu::separator {
	background: #00FF00;
}

QMenu {
    border: 1px solid #00FF00;
}

/* Field color */
FieldView, SimFieldView {
    background: #00FF00;
}

QPushButton {
    background: #2c2c2c;
    border-color: #00FF00;
    border-style: inset;
}

QPushButton:hover {
    background: #00FF00;
}
